{
  "name": "honya-backend",
  "version": "0.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "start": "node -r dotenv/config ./src/bin/www.js",
    "dev": "NODE_ENV=dev DEBUG=honya-backend:* nodemon -r dotenv/config ./src/bin/www.js",
    "test": "npm run test:unit && npm run test:integration",
    "test:unit": "NODE_ENV=test ./node_modules/mocha/bin/mocha -r dotenv/config ./tests/api/unit/**/*.test.js",
    "test:integration": "NODE_ENV=test ./node_modules/mocha/bin/mocha -r dotenv/config --parallel=false ./tests/api/integration/**/*.test.js",
    "coverage": "NODE_ENV=test nyc --reporter=text npm run test"
  },
  "dependencies": {
    "bcrypt": "^5.0.1",
    "cookie-parser": "~1.4.4",
    "debug": "~2.6.9",
    "dotenv": "^10.0.0",
    "express": "~4.16.1",
    "express-validator": "^6.11.1",
    "formidable": "^1.2.2",
    "jsonwebtoken": "^8.5.1",
    "lodash": "^4.17.21",
    "mongoose": "^5.12.12",
    "morgan": "~1.9.1",
    "morgan-json": "^1.1.0",
    "nconf": "^0.11.2",
    "parse-function": "^5.6.10",
    "passport": "^0.4.1",
    "passport-google-oauth20": "^2.0.0",
    "passport-local": "^1.0.0",
    "pm2": "^5.1.0",
    "redis": "^3.1.2",
    "winston": "^3.3.3"
  },
  "devDependencies": {
    "babel-plugin-rewire": "^1.2.0",
    "chai": "^4.3.4",
    "mocha": "^9.0.0",
    "mock-req-res": "^1.2.0",
    "nodemon": "^2.0.12",
    "nyc": "^15.1.0",
    "sinon": "^11.1.1",
    "sinon-chai": "^3.7.0",
    "supertest": "^6.1.3"
  }
}
